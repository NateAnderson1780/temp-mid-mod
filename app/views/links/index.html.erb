
<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<span>Unread Links</span>
<input id='unread' type="checkbox" name="" value="">
<br>
<span>Read Links</span>
<input id='read' type="checkbox" name="" value="">

<div id="links-list"></div>

<h2>Hot Reads!</h2>
<ol id="hot-reads">
<% @hot_links.each do |read| %>
  <li class='hot-read'>
    <a href="<%= read.url %>"><%= read.url %></a>
  </li>
<% end %>
</ol>
