<div class="row text-center">
  <h1>Sign up for URLockbox</h1>
</div>
<div class="container sign_up" style="margin-top:50px;margin-bottom:200px;">
  <div class="container-fluid well well-md text-center">
    <%= form_for @user do |f| %>
    <div class="form-group row">
      <%= f.label :name, class: "col-xs-2 col-form-label" %>
      <div class="col-xs-10">
        <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
      </div>
    </div>
      <div class="form-group row">
        <%= f.label :email_address, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.text_field :email_address, placeholder: "Email address", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :password_confirmation, class: "col-xs-2 col-form-label" %>
        <div class="col-xs-10">
          <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.submit "Sign Up", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>
  </div>
</div>

